@model GetNewsListDto
@{
    ViewData["Title"] = "News list";
}

@section Styles
{
    <style>
        .news-list-header {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 1;
            text-overflow: ellipsis;
            line-clamp: 1;
            -webkit-box-orient: vertical;
        }

        .news-list-container__grid__item__picture {
            width: 250px;
            height: 250px;
            object-fit: cover;
        }

        .news-list-container__grid__item .news-list-container__grid__item__title {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            text-overflow: ellipsis;
            line-clamp: 2;
            text-decoration: none;
            -webkit-box-orient: vertical;
        }

        .news-list-container__grid__item .news-list-container__grid__item__sub-title {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            text-overflow: ellipsis;
            line-clamp: 3;
            -webkit-box-orient: vertical;
        }

        .news-list-container__grid__item .news-list-container__grid__item__news-source {
            gap: 5px;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

            .news-list-container__grid__item .news-list-container__grid__item__news-source .news-list-container__grid__item__news-source__title {
                overflow: hidden;
                display: -webkit-box;
                -webkit-line-clamp: 1;
                text-overflow: ellipsis;
                line-clamp: 1;
                -webkit-box-orient: vertical;
            }

            .news-list-container__grid__item .news-list-container__grid__item__news-source .news-list-container__grid__item__news-source__logo {
                width: 16px;
                height: 16px;
                object-fit: cover;
            }
    </style>
}

<h1>News list</h1>
<hr />
<partial name="_Hotline" />
<div class="row">
    <div class="col-xl-4">
        <partial name="_Filters" model="@Model" />
        <hr class="d-xl-none" />
    </div>
    <div class="col-xl-8">
        <partial name="_List" model="@Model" />
        <partial name="_Pagination" model="@Model.Result.ToPaginationModel("newsListForm")" />
    </div>
</div>