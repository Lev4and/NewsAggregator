@model IReadOnlyCollection<News>

<div>
    <h4 class="fst-italic">Recent news</h4>
    <ul class="list-unstyled">
        @foreach (var news in Model)
        {
            <li>
                <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" asp-route="News" asp-route-id="@news.Id">
                    <div class="col">
                        <h6 class="mb-0">@news.Title</h6>
                        @if (news.PublishedAt is not null)
                        {
                            <small class="text-body-secondary">@news.PublishedAt?.ToString("MMM. dd, yyyy, h:mm tt zzz", new CultureInfo("en-US"))</small>
                        }
                    </div>
                </a>
            </li>
        }
    </ul>
</div>

