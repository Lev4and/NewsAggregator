@model PaginationModel

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
            <a class="page-link" aria-label="Previous" data-form-id="@Model.FormId" data-page="@(Model.Page - 1)">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @foreach (var pageNumber in Model.PageNumbers)
        {
            <li class="page-item @(Model.Page == pageNumber ? "active" : "")">
                <a class="page-link" data-form-id="@Model.FormId" data-page="@pageNumber">
                    @pageNumber
                </a>
            </li>
        }
        <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" aria-label="Next" data-form-id="@Model.FormId" data-page="@(Model.Page + 1)">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>