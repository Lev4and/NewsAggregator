@model NewsEditor
@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>
<hr />
<div class="row g-3">
    <div class="col-12 col-lg-4 d-flex align-self-center justify-content-center">
        @if (Model.Source?.Logo is not null)
        {
            <img class="bd-placeholder-img card-img-top" style="width: 225px; height: 225px; object-fit: cover" ole="img" aria-label="Placeholder: Thumbnail" src="@Model.Source.Logo.Original" />
        }
        else
        {
            <svg class="bd-placeholder-img card-img-top" width="225" height="225" style="width: 225px; height: 225px" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
        }
    </div>
    <div class="col-12 col-lg-8">
        <form>
            <div class="row g-3">
                <div class="col-12">
                    <label for="nameTextInput" class="form-label">Name</label>
                    <input id="nameTextInput" class="form-control" type="text" placeholder="" name="name" value="@Model.Name" disabled readonly>
                </div>
                <div class="col-12">
                    <label for="newsSourceTitleTextInput" class="form-label">News source title</label>
                    <input id="newsSourceTitleTextInput" class="form-control" type="text" placeholder="" name="newsSourceTitle" value="@Model.Source.Title" disabled readonly>
                </div>
            </div>
            <hr class="my-4" />
            <div class="row g-3 d-flex justify-content-center">
                <div class="col-sm-6">
                    <button class="w-100 btn btn-primary btn-lg">
                        <a class="text-decoration-none text-reset" asp-route="NewsList" asp-route-newsEditorsIds="@Model.Id">
                            Show all news
                        </a>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>