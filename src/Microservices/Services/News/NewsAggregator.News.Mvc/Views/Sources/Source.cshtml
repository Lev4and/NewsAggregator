@model NewsSource
@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>
<hr />
<div class="row g-3">
    <div class="col-12 col-lg-4 d-flex align-self-center justify-content-center">
        @if (Model.Logo is not null)
        {
            <img class="bd-placeholder-img card-img-top" style="width: 225px; height: 225px; object-fit: cover" ole="img" aria-label="Placeholder: Thumbnail" src="@Model.Logo.Original" />
        }
        else
        {
            <svg class="bd-placeholder-img card-img-top" width="225" height="225" style="width: 225px; height: 225px" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
        }
    </div>
    <div class="col-12 col-lg-8">
        <form>
            <div class="row g-3">
                <div class="col-12">
                    <label for="titleTextInput" class="form-label">Title</label>
                    <input id="titleTextInput" class="form-control" type="text" placeholder="" name="title" value="@Model.Title" disabled readonly>
                </div>
                <div class="col-12">
                    <label for="siteUrlTextInput" class="form-label">Site URL</label>
                    <input id="siteUrlTextInput" class="form-control" type="text" placeholder="" name="siteUrl" value="@Model.SiteUrl" disabled readonly>
                </div>
                <div class="col-12">
                    @Html.CheckBox("isEnabled", Model.IsEnabled, new { @class = "form-check-input", id = "isEnabledCheck", disabled = "disabled", @readonly = "readonly" })
                    <label class="form-check-label" for="isEnabledCheck">
                        Is enabled
                    </label>
                </div>
            </div>
            <hr class="my-4" />
            <div class="row g-3 d-flex justify-content-center">
                <div class="col-sm-6">
                    <button class="w-100 btn btn-primary btn-lg">
                        <a class="text-decoration-none text-reset" asp-route="Authors" asp-route-newsSourcesIds="@Model.Id">
                            Show all authors
                        </a>
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-12">
        <vc:news-section-by-source id="@Model.Id" />
    </div>
</div>