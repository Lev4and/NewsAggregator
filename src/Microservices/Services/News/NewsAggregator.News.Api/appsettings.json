{
  "ConnectionStrings": {
    "NewsDbPostgreSql": "Host=postgres;Port=5432;Database=news;Username=postgres;Password=sa",
    "NewsDbElasticsearch": "http://elasticsearch:9200"
  },
  "MessageBroker": {
    "RabbitMQ": {
      "Host": "amqp://rabbitmq:5672",
      "Username": "guest",
      "Password": "guest"
    }
  },
  "Caching": {
    "Redis": {
      "ConnectionString": "redis:6379"
    }
  },
  "WebScraping": {
    "Selenium": {
      "ConnectionString": "http://selenium.hub:4444/wd/hub"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq", "Serilog.Enrichers.ClientInfo" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://newsaggregator.news.api.seq"
        }
      }
    ],
    "Enrich": [
      "WithClientIp",
      "WithThreadId",
      "FromLogContext",
      "WithMachineName",
      {
        "Name": "WithRequestHeader",
        "Args": { "headerName": "User-Agent" }
      }
    ]
  },
  "AllowedHosts": "*"
}
